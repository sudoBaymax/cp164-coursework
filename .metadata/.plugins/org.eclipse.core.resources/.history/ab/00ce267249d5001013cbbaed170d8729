# Imports

from BST_linked import BST

def bst_sum(bst):
    return bst_sum_aux(bst._root)
    
def bst_sum_aux(node):
    sum = 0
    
    if node is None:
        sum = 0
    else:
        sum = node._value + bst_sum_aux(node._left) + bst_sum_aux(node._right)

    return sum
    
x = [3, ] # 10 
bst_tree = BST()

for i in x:
    bst_tree.insert(i)
    
print(bst_sum(bst_tree))


def count_leaves(bst):
    return count_leaves_aux(bst._root)
    
def count_leaves_aux(node):
    count = 0
    
    if node is None:
        count = 0
    elif node._left is None and node._right is None:
        count = 1
    else:
        count = count_leaves_aux(node._left) + count_leaves_aux(node._right)
        
    
