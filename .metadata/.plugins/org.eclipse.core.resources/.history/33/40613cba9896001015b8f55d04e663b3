# Imports

from Movie_utilities import write_movies
from Movie import Movie

def main():
    movie_juno = Movie("Juno", 2007, "Jason Reitman", 7.7, [2, 4])
    movie_stardust = Movie("Stardust", 2007, "Matthew Vaughn", 7.7, [1, 3])
    movie_alphaville = Movie("Alphaville", 1965, "Jean-Luc Godard", 7.1, [0])
    
    movies = [
        movie_juno,      # drama, comedy
        movie_stardust, # fantasy, romance
        movie_alphaville  # science fiction
    ]

    out_path = "test.txt"
    with open(out_path, "w", encoding="utf-8") as fv:
        write_movies(fv, movies)

    with open(out_path, "r", encoding="utf-8") as f:
        print(f.read(), end="")
        
if __name__ == "__main__":
    main()